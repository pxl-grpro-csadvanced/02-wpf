<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BloodRed">#FF6B0000</Color>
    <Color x:Key="DarkBackground">#FF0E0E0E</Color>
    <Color x:Key="DarkSurface">#FF1A1A1A</Color>

    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource DarkSurface}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource BloodRed}"/>


    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

</ResourceDictionary>
