<Window x:Class="Weerwolven.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weerwolven"
        mc:Ignorable="d"
        Width="300" Height="500"
        Title="Speler"
        FontFamily="Segoe Script" Background="Black" Foreground="White"
        >

    <StackPanel Margin="20">
            
        <TextBlock x:Name="nameTextBlock"
                   FontSize="22"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
    
        <Grid>
        <Image Source="/Images/villager.jpg" Height="200" Name="roleImage"/>
        <Border x:Name="card"
                Height="50"
                CornerRadius="12"
                Background="#60ff5555"
                Margin="0,0,0,20" 
                VerticalAlignment="Top">

            <TextBlock x:Name="roleTextBlock"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="Hidden"/>
        </Border>


        </Grid>
        <Button Content="Toon rol"
                Name="showButton"
                Click="Reveal_Click"
                Margin="0 10"/>


        <Button Content="Ik ben dood"
                Click="Die_Click"/>

    </StackPanel>
</Window>