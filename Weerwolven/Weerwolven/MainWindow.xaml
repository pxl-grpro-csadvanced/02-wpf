<Window x:Class="Weerwolven.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weerwolven"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" FontFamily="Segoe Script" Background="Black">
    <StackPanel Margin="20">

        <TextBlock Text="Weerwolven"
                   FontSize="26"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   FontFamily="Segoe Script"
                   Foreground="White"
                   />

        <TextBox Name="nameTextBox"
                 Margin="0,0,0,10"/>

        <Button Content="Voeg speler toe"
                Click="AddPlayer_Click"
                Margin="0,0,0,15"
                Name="addPlayerButton"/>

        <ListBox Name="playersListBox"
                 Height="200"/>

        <Button Content="Start spel"
                Click="StartGame_Click"
                Margin="0,20,0,0"
                Name="startGameButton"
                />
    </StackPanel>
</Window>
